{% extends 'withNavbar.html.twig' %}

{% block title %}انتخاب سمت پیشفرض{% endblock %}

{% block pageBody %}
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-8 mx-auto">
                <div class="card">
                    <div class="card-header">
                        سمت‌ها و جایگاه‌ها
                    </div>
                    <div class="card-body">
                        <p class="text-primary">
                            لطفا برای ادامه فعالیت در سامانه سمت پیشفرض خود را انتخاب کنید.
                        </p>
                        <div class="table-responsive">
                            <table class="table table-sm table-bordered  table-hover">
                                <thead class="thead-light">
                                <tr>
                                    <th class="text-center" scope="col">ردیف</th>
                                    <th class="text-center" scope="col">نام سمت شغلی</th>
                                    <th class="text-center" scope="col">امکانات</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for position in positions %}
                                    <tr>
                                        <th class="text-center" >{{ loop.index }}</th>
                                        <th class="text-center" >{{ position.label }}</th>
                                        <th class="text-center" >
                                            <a class="btn btn-primary" href="{{ path('userChangePosition',{'id':position.id}) }}">انتخاب به عنوان سمت پیشفرض</a>
                                        </th>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}