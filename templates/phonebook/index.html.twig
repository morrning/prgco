{% extends 'appSimple.html.twig' %}
{% block title %}دفترچه تلفن{% endblock %}
{% block appBody %}
    <div class="card">
        <div class="card-header bg-info text-light">
            دفترچه تلفن
        </div>
        <div class="card-body">
            {{ form_start(form) }}
            <div class="row">
                <div class="col-sm-12 col-md-6 pb-2">
                    {{ form_widget(form.search) }}
                </div>
                <div class="col-sm-12 col-md-12 pb-2">
                    {{ form_widget(form.submit) }}
                    {% if UserMGR.hasPermission('phonebookAdmin','PHONEBOOK') == true %}
                        <a class="btn btn-success" href="{{ path('phonebookAddNew') }}">
                            <i class="fas fa-user-plus"></i>
                            شماره جدید
                        </a>
                    {% endif %}
                </div>
            </div>
            {{ form_end(form) }}
            <hr>
            <div class="table-responsive">
                <table class="table table-sm table-bordered table-hover rounded text-center">
                    <thead class="bg-blue text-light">
                    <tr>
                        <th>ردیف</th>
                        <th>نام و نام خانوادگی</th>
                        <th>شماره تلفن</th>
                        <th>داخلی</th>
                        <th>موبایل</th>
                        <th>توضیحات</th>
                        <th>امکانات</th>
                    </tr>
                    </thead>
                    <tbody class="">
                    {% for num in nums %}
                        <tr class="">
                            <td>{{ loop.index }}</td>
                            <td>{{ num.username }}</td>
                            <td style="direction: ltr">{{ num.tel1 }}</td>
                            <td style="direction: ltr">{{ num.tel2 }}</td>
                            <td style="direction: ltr">{{ num.mobile1 }}</td>
                            <td style="direction: ltr">{{ num.des }}</td>
                            <td>
                                <a class="btn btn-block btn-success" href="{{ path('phonebookView',{'id':num.id}) }}">نمایش</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
