{% extends 'cmr/REQbase.html.twig' %}

{% block title %}لیست درخواست‌های ویزا{% endblock %}
{% block appTop %}
<a class="btn btn-success border" href="{{ path('ceremonialREQpasengers') }}">
        <i class="fa fa-list-alt"></i>
        لیست مسافرها
    </a>{% endblock %}
{% block pageBody %}
    <div class="alert alert-info">
        <i class="fa fa-info-circle"></i>
        برای ثبت درخواست ویزا ابتدا به بخش
        <a class="btn btn-link" href="{{ path('ceremonialREQpasengers') }}"> فهرست مسافرها </a>
        مراجعه نمایید
        پس از انتخاب افراد نسبت به ثبت درخواست اقدام نمایید.
    </div>
    <div class="table-responsive">
        <table class="table table-sm table-bordered table-hover rounded text-center">
            <thead class="bg-blue text-light">
            <tr>
                <th>ردیف</th>
                <th>شماره درخواست</th>
                <th>وضعیت درخواست</th>
                <th>تاریخ درخواست</th>
                <th>امکانات</th>
            </tr>
            </thead>
            <tbody class="">
            {% for visa in visas %}
                <tr class="{% if visa.visaState.stateCode == 3 %}bg-success text-light{% elseif visa.visaState.StateCode == -1 %}bg-danger text-light{% endif %}">
                    <td>{{ loop.index }}</td>
                    <td>{{ visa.id }}</td>
                    <td>{{ visa.visaState.stateName }}</td>
                    <td>{{ Jdate.jdate('Y/n/d',visa.dateSubmit) }}</td>
                    <td>
                        <a class="btn btn-primary" href="{{ path('ceremonialREQVisaView',{'id':visa.id}) }}">مشاهده</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}