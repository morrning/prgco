            {{ form_widget(form.tel1) }}
        </div>
        <div class="col-sm-12 col-md-6">
            {{ form_label(form.tel2) }}
            {{ form_widget(form.tel2) }}
        </div>
        <div class="col-sm-12 col-md-12 pt-2">
            {{ form_label(form.adr) }}
            {{ form_widget(form.adr) }}
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-12">
            {{ form_widget(form.submit) }}
