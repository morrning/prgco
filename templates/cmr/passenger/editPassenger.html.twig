            {{ form_widget(form.ptype) }}
        </div>
    </div>
    <hr>
    <h5 class="text-success">اطلاعات فردی</h5>
    <div class="row">
        <div class="col-sm-12 col-md-6">
            {{ form_label(form.pname) }}
            {{ form_widget(form.pname) }}
            {{ form_label(form.pfamily) }}
            {{ form_widget(form.pfamily) }}
            {{ form_label(form.pfather) }}
            {{ form_widget(form.pfather) }}
            {{ form_label(form.pbirthday) }}
            {{ form_widget(form.pbirthday) }}

        </div>
        <div class="col-sm-12 col-md-6 text-left"  style="direction: ltr; !important;">
