{% extends 'mostusedfiles/base.html.twig' %}

{% block title %}آرشیو فرم ها{% endblock %}
{% block pageBody %}
    <script>
        $(document).ready(function() {
            $('.table').DataTable({
                "language": {
                    "url": "{{ asset('assets/datatable/farsi.json') }}"
                }
            });
        } );
    </script>
    <div class="table-responsive">
        <table class="table table-sm table-bordered table-hover rounded text-center">
            <thead class="thead-dark">
            <tr>
                <th>ردیف</th>
                <th>عنوان</th>
                <th>شناسه ایزو</th>
                <th>امکانات</th>
            </tr>
            </thead>
            <tbody class="">
            {% for file in files %}
                <tr class="">
                    <td>{{ loop.index }}</td>
                    <td>{{ file.title }}</td>
                    <td>{{ file.ISOCode }}</td>
                    <td>
                        <a class="btn btn-sm btn-success" href="{{ asset('files/' ~ file.fileID) }}">دریافت</a>
                        <a class="btn btn-sm btn-danger" href="{{ path('mostusedfilesDeleteFile',{'id':file.id}) }}">حذف</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}