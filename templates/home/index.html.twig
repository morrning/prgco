{% extends 'appSimple.html.twig' %}

{% block title %}صفحه اصلی{% endblock %}

{% block appBody %}
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 pb-2">
            <div class="bd-example">
                <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
                        <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="{{ asset('assets/images/slider/1.jpg') }}" class="d-block w-100" alt="...">
                            <div class="carousel-caption d-none d-md-block">
                                <h5>نجف اشرف</h5>
                                <p>صحن حضرت زهرا (س)</p>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <img src="{{ asset('assets/images/slider/2.jpg') }}" class="d-block w-100" alt="...">
                            <div class="carousel-caption d-none d-md-block">
                                <h5>کربلا</h5>
                                <p>توسعه حرم مطهر امام حسین (ع)</p>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <img src="{{ asset('assets/images/slider/3.jpg') }}" class="d-block w-100" alt="...">
                            <div class="carousel-caption d-none d-md-block">
                                <h5>تبریز</h5>
                                <p>توسعه منابع فیزیکی</p>
                            </div>
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-12 pb-2">
            <div class="row">
                <div class="col-sm-12 col-md-12">
                    <div class="card mb-2">
                        <div class="card-header">
                            نمودار پیشرفت
                        </div>
                        <div class="card-body">
                            <p>
                                <span style="color: red">پیشرفت فیزیکی</span>
                                |
                                <span style="color: lightcoral">پیشرفت برنامه‌ای</span>
                            </p>
                            <div class="ct-chart" id="chart2"></div>

                            <script>
                                var data = {
                                    labels: {{ pn | json_encode | raw }},
                                    series: [
                                        {{ pp | json_encode | raw }},
                                        {{ cp | json_encode | raw}},
                                    ]
                                };

                                var options = {
                                    seriesBarDistance: 10,
                                    height: '50%'
                                };

                                var responsiveOptions = [
                                    ['screen and (max-width: 640px)', {
                                        seriesBarDistance: 5,
                                        axisX: {
                                            labelInterpolationFnc: function (value) {
                                                return value[0];
                                            }
                                        }
                                    }]
                                ];

                                new Chartist.Bar('.ct-chart', data, options, responsiveOptions);
                            </script>
                        </div>
                    </div>
                </div>
                <div class="col-sm-12 col-md-9">
                    <div class="card">
                        <div class="card-header">
                            گزارش پیشرفت عملیات اجرایی
                        </div>
                        <div class="card-body">
                            {% for project in projects %}
                                <div class="pb-2">
                                    <span>{{ project.areaName }}</span>
                                    <div class="progress" aria-describedby="passwordHelpBlock">
                                        <div class="progress-bar progress-bar-animated progress-bar-striped
                                        {% if project.Pprogress <10 %}bg-danger
                                        {% elseif project.Pprogress <25 %}bg-warning
                                        {% elseif project.Pprogress <55 %}bg-secondary
                                        {% elseif project.Pprogress <80 %}bg-info
                                        {% elseif project.Pprogress <100 %}bg-success{% endif %}
                                        " role="progressbar" aria-valuenow="40"
                                             aria-valuemin="0" aria-valuemax="100" style="width:{{ project.Pprogress }}%">
                                            {{ project.Pprogress }} درصد
                                        </div>
                                    </div>
                                    <small id="passwordHelpBlock" class="form-text text-muted">
                                        آخرین به روز رسانی:
                                        <td>{{ Jdate.jdate('Y/n/d در ساعت h:i',project.lastUpdate) }}</td>
                                    </small>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
                <div class="col-sm-12 col-md-3">
                    <a href="{{ path('suggestion') }}"><img class="img-fluid img-thumbnail" src="{{ asset('assets/images/public/suggestionbox.jpg') }}"></a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
