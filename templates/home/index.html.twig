{% extends 'withNavbar.html.twig' %}

{% block title %}صفحه اصلی{% endblock %}

{% block pageBody %}
<!-- Page Content -->

    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-3">
                <div class="list-group">
                    <a href="{{ path('apps') }}" class="list-group-item list-group-item-action active">
                        <i class="fas fa-bars"></i>
                        سامانه‌ها
                    </a>
                    <a href="http://oas.prgco.ir/menu/" class="list-group-item list-group-item-action" target="_blank">
                        <i class="fas fa-envelope"></i>
                        سامانه مکاتبات سازمانی
                    </a>
                    <a href="http://pay.prgco.ir" class="list-group-item list-group-item-action" target="_blank">
                        <i class="fas fa-money-check-alt"></i>
                        سامانه فیش حقوقی
                    </a>
                    <a href="http://edari.prgco.ir:8091/Account/Login" class="list-group-item list-group-item-action" target="_blank">
                        <i class="fas fa-user-alt"></i>
                        سامانه مدیریت کارکنان
                    </a>
                    <a href="https://mail.prgco.ir/" class="list-group-item list-group-item-action" target="_blank">
                        <i class="fas fa-inbox"></i>
                        پست الکترونیکی
                    </a>
                    {% if UserMGR.hasPermission('newsPublish','NEWS') == true %}
                        <a href="{{ path('newsDashboard') }}" class="list-group-item list-group-item-action">
                            <i class="fas fa-newspaper"></i>
                            سامانه انتشار خبر
                        </a>
                    {% endif %}
                    {% if UserMGR.hasPermission('projectAdmin','PROJECT') == true %}
                        <a href="{{ path('projectAdminDashboard') }}" class="list-group-item list-group-item-action">
                            <i class="fas fa-newspaper"></i>
                            سامانه کنترل پروژه کل
                        </a>
                    {% endif %}
                    {% if UserMGR.isLogedIn() %}
                        <a href="{{ path('apps') }}" class="list-group-item list-group-item-action active btn-success">
                            ناحیه کاری:{{ area.areaName }}
                        </a>
                        {% if UserMGR.hasPermission('ictRequest','ICT',null,area.id) == true %}
                            <a href="{{ path('ictreqDashboard') }}" class="list-group-item list-group-item-action">
                                <i class="fas fa-desktop"></i>
                                درخواست خدمات فناوری اطلاعات
                            </a>
                        {% endif %}
                        {% if UserMGR.hasPermission('ictDoing','ICT',null,area.id) == true %}
                            <a href="{{ path('ictDoingDashboard') }}" class="list-group-item list-group-item-action">
                                <i class="fas fa-server"></i>
                                مجری خدمات فناوری اطلاعات
                            </a>
                        {% endif %}
                        {% if UserMGR.hasPermission('pmAccess','PM',null,area.id) == true %}
                            <a href="{{ path('ictDoingDashboard') }}" class="list-group-item list-group-item-action">سامانه کنترل پروژه</a>
                        {% endif %}
                    {% endif %}
                </div>
            </div>
            <div class="col-xs-12 col-sm-12 col-md-8">
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-4 pb-2">
                        <div class="card">
                            <div class="card-header text-center bg-primary text-light">
                                تابلو اعلانات
                            </div>
                            <div class="card-body">
                                <ul class="">
                                    {% set posts = EntityMGR.findByPage('App:NewsPost',1,10) %}
                                    {% for post in posts %}
                                        <li><a href="{{ path('newsShowPost',{'id':post.id}) }}">{{ post.title }}</a></li>
                                    {% endfor %}
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-8 pb-2">
                        <div class="bd-example">
                            <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
                                <ol class="carousel-indicators">
                                    <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
                                    <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
                                    <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
                                </ol>
                                <div class="carousel-inner">
                                    <div class="carousel-item active">
                                        <img src="{{ asset('assets/images/slider/1.jpg') }}" class="d-block w-100" alt="...">
                                        <div class="carousel-caption d-none d-md-block">
                                            <h5>نجف اشرف</h5>
                                            <p>صحن حضرت زهرا (س)</p>
                                        </div>
                                    </div>
                                    <div class="carousel-item">
                                        <img src="{{ asset('assets/images/slider/2.jpg') }}" class="d-block w-100" alt="...">
                                        <div class="carousel-caption d-none d-md-block">
                                            <h5>کربلا</h5>
                                            <p>توسعه حرم مطهر امام حسین (ع)</p>
                                        </div>
                                    </div>
                                    <div class="carousel-item">
                                        <img src="{{ asset('assets/images/slider/3.jpg') }}" class="d-block w-100" alt="...">
                                        <div class="carousel-caption d-none d-md-block">
                                            <h5>تبریز</h5>
                                            <p>توسعه منابع فیزیکی</p>
                                        </div>
                                    </div>
                                </div>
                                <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-12 pb-2">
                        <div class="card">
                            <div class="card-header">
                                گزارش پیشرفت عملیات اجرایی
                            </div>
                            <div class="card-body">
                                {% for project in projects %}
                                    <div class="pb-2">
                                        <span>{{ project.areaName }}</span>
                                    <div class="progress" aria-describedby="passwordHelpBlock">
                                        <div class="progress-bar progress-bar-animated progress-bar-striped
                                        {% if project.Pprogress <10 %}bg-danger
                                        {% elseif project.Pprogress <25 %}bg-warning
                                        {% elseif project.Pprogress <55 %}bg-secondary
                                        {% elseif project.Pprogress <80 %}bg-info
                                        {% elseif project.Pprogress <100 %}bg-success{% endif %}
                                        " role="progressbar" aria-valuenow="40"
                                             aria-valuemin="0" aria-valuemax="100" style="width:{{ project.Pprogress }}%">
                                            {{ project.Pprogress }} درصد
                                        </div>
                                    </div>
                                        <small id="passwordHelpBlock" class="form-text text-muted">
                                            آخرین به روز رسانی:
                                            <td>{{ Jdate.jdate('Y/n/d در ساعت h:i',project.lastUpdate) }}</td>
                                        </small>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
