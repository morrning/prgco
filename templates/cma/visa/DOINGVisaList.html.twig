{% extends 'cma/DOINGbase.html.twig' %}

{% block title %}{{ typeName }}{% endblock %}
{% block pageBody %}
    <div class="table-responsive">
        <table class="table table-sm table-bordered table-hover rounded text-center">
            <thead class="bg-blue text-light">
            <tr>
                <th>ردیف</th>
                <th>شماره درخواست</th>
                <th>وضعیت درخواست</th>
                <th>تاریخ درخواست</th>
                <th>امکانات</th>
            </tr>
            </thead>
            <tbody class="">
            {% for visa in visas %}
                <tr class="{% if visa.visaState.stateCode == 1 %}bg-success text-light{% elseif visa.visaState.StateCode == -1 %}bg-danger text-light{% endif %}">
                    <td>{{ loop.index }}</td>
                    <td>{{ visa.id }}</td>
                    <td>{{ visa.visaState.stateName }}</td>
                    <td>{{ Jdate.jdate('Y/n/d',visa.dateSubmit) }}</td>
                    <td>
                        <a class="btn btn-primary" href="{{ path('ceremonialDOINGVisaView',{'id':visa.id}) }}">مشاهده</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}