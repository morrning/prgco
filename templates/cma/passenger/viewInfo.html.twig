{% extends 'base.html.twig' %}

{% block title %}اطلاعات مسافر:{{ passenger.pname ~ ' ' ~ passenger.pfamily }}{% endblock %}
{% block body %}
    <div class="py-2">
        <nav>
            <div class="nav nav-tabs" id="nav-tab" role="tablist">
                <a class="nav-item nav-link" data-toggle="tab" role="tab"  aria-selected="true" onclick="window.close();">
                    <i class="fa fa-window-close"></i>
                </a>
                <a class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab" href="#nav-home" role="tab" aria-controls="nav-home" aria-selected="true">
                    <i class="fas fa-user"></i>
                    اطلاعات مسافر
                </a>
                {% if passenger.ptype.typeName == 'پرسنل شرکت' %}
                    <a class="nav-item nav-link" id="nav-cout-tab" data-toggle="tab" href="#nav-cout" role="tab" aria-controls="nav-cout" aria-selected="true">
                        <i class="fas fa-not-equal"></i>
                        مجوزهای خروج از کشور
                    </a>
                {% endif %}
                <a class="nav-item nav-link" id="nav-profile-tab" data-toggle="tab" href="#nav-profile" role="tab" aria-controls="nav-profile" aria-selected="false">
                    <i class="fas fa-history"></i>
                    تاریخچه رویدادها
                </a>
            </div>
        </nav>
        <div class="tab-content" id="nav-tabContent">
            <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
                <div class="container py-3">
                    <div class="row">
                        <div class="col-sm-12 col-md-4">
                            <img class="img-fluid img-thumbnail" src="{{ asset('files/ProfilePic/' ~ passenger.pcodemeli ~ '.jpg') }}">
                        </div>
                        <div class="col-sm-12 col-md-8">
                            <div class="row">
                                <div class="col-12">
                                    <p>
                                        هویت مسافر:
                                        <span class="alert alert-danger">{{ passenger.ptype.typeName }}</span>
                                    </p>
                                </div>
                                <div class="col-sm-12 col-md-6">
                                    <p>
                                        نام:
                                        <span class="text-danger">{{ passenger.pname }}</span>
                                    </p>
                                    <p>
                                        نام خانوادگی:
                                        <span class="text-danger">{{ passenger.pfamily }}</span>
                                    </p>
                                    <p>
                                        نام پدر:
                                        <span class="text-danger">{{ passenger.pfather }}</span>
                                    </p>
                                    <p>
                                        شماره شناسنامه:
                                        <span class="text-danger">{{ passenger.pshenasname }}</span>
                                    </p>
                                    <p>
                                        کد ملی:
                                        <span class="text-danger">{{ passenger.pcodemeli }}</span>
                                    </p>
                                    <p>
                                        پایان اعتبار گذرنامه:
                                        <span class="text-danger">{{ passenger.passportExpireDate }}</span>
                                    </p>

                                </div>
                                <div class="col-sm-12 col-md-6">
                                    <p>
                                        Name:
                                        <span class="text-danger">{{ passenger.lname }}</span>
                                    </p>
                                    <p>
                                        FamilyName:
                                        <span class="text-danger">{{ passenger.lfamily }}</span>
                                    </p>
                                    <p>
                                        Father Name:
                                        <span class="text-danger">{{ passenger.lfather }}</span>
                                    </p>
                                    <p>
                                        National Code:
                                        <span class="text-danger">{{ passenger.pcodemeli }}</span>
                                    </p>
                                    <p>
                                        Passport Number:
                                        <span class="text-danger">{{ passenger.PassNo }}</span>
                                    </p>

                                </div>
                            </div>
                        </div>

                    </div>
                    <hr>
                    <h5 class="text-success">اطلاعات تماس</h5>
                    <div class="col-12 pt-1">
                        شماره همراه:
                        {{ passenger.tel1 }}
                    </div>
                    <div class="col-12 pt-1">
                        تلفن ثابت:
                        {{ passenger.tel2 }}
                    </div>
                    <div class="col-12 pt-1">
                        شماره شبکه های اجتماعی:
                        {{ passenger.tel3 }}
                    </div>
                    <div class="col-12 pt-1">
                        نشانی:
                        {{ passenger.adr }}
                    </div>
                    <div class="col-12 pt-1">
                        کد پستی:
                        {{ passenger.postalCode }}
                    </div>
                    <hr>
                    <h5>اسکن مدارک</h5>
                    {% if docs | length != 0 %}
                        <hr>
                        <h5 class="text-success">اسکن مدارک:</h5>
                        {% for doc in docs %}
                            <a href="{{ asset('files/' ~ doc.docName) }}" data-lightbox="image-1" data-title="{{ doc.docType.tname }}"><img  style="max-height: 250px" class="img-thumbnail" src="{{ asset('files/' ~ doc.docName) }}"></a>
                        {% endfor %}
                    {% else %}
                        <hr>
                        <h5 class="text-warning">تاکنون هیچ مدارکی ارسال نشده است.</h5>
                    {% endif %}
                </div>
            </div>
            {% if passenger.ptype.typeName == 'پرسنل شرکت' %}
                <div class="tab-pane fade" id="nav-cout" role="tabpanel" aria-labelledby="nav-cout-tab">
                    <div class="container py-3">
                        <div class="row">
                            <div class="col-sm-12 col-md-12 mx-auto">
                                <div class="table-responsive">
                                    <table class="table table-sm table-bordered table-hover rounded text-center">
                                        <thead class="bg-blue text-light">
                                        <tr>
                                            <th>ردیف</th>
                                            <th>شماره مکاتبه</th>
                                            <th>مرجع صدور</th>
                                            <th>شروع اعتبار</th>
                                            <th>پایان اعتبار</th>
                                            <th>وضعیت</th>
                                        </tr>
                                        </thead>
                                        <tbody class="">
                                        {% for coutLetter in coutLetters %}
                                            <tr>
                                                <td>{{ loop.index }}</td>
                                                <td>{{ coutLetter.letterNum }}</td>
                                                <td>{{ coutLetter.letterSource }}</td>
                                                <td>{{ coutLetter.letterStartDate }}</td>
                                                <td>{{ coutLetter.letterEndDate }}</td>
                                                <td>
                                                    {% set valueStart = coutLetter.letterStartDate |replace({'/': ''}) %}
                                                    {% set valueEnd = coutLetter.letterEndDate |replace({'/': ''}) %}
                                                    {% set valueNow = Jdate.jdate('Ymd','now'|date('U'))%}
                                                    {% if  valueNow >= valueStart and valueNow < valueEnd %}
                                                        <span class="badge badge-success">دارای اعتبار</span>
                                                    {% else %}
                                                        <span class="badge badge-danger">منقضی شده</span>
                                                    {% endif %}
                                                </td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}

            <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">
                <div class="container py-3">
                    <div class="row">
                        <div class="col-sm-12 col-md-12 mx-auto">
                            <div class="table-responsive">
                                <table class="table table-sm table-bordered table-hover rounded text-center">
                                    <thead class="bg-blue text-light">
                                    <tr>
                                        <th>ردیف</th>
                                        <th>تاریخ</th>
                                        <th>نام کاربر</th>
                                        <th>توضیحات</th>
                                        <th>عملیات</th>
                                    </tr>
                                    </thead>
                                    <tbody class="">
                                    {% for event in events %}
                                        <tr>
                                            <td>{{ loop.index }}</td>
                                            <td>{{ Jdate.jdate('Y/n/d H:i:s',event.dateSubmit) }}</td>
                                            <td>{{ event.fullname }}</td>
                                            <td>{{ event.des }}</td>
                                            <td>{{ event.operation }}</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <hr>
        <a class="btn btn-warning" href="#" onclick="window.close()">
            بازگشت
        </a>
    </div>

{% endblock %}