{% extends 'project/base.html.twig' %}

{% block title %}پروژه جدید{% endblock %}

{% block pageBody %}
    {{ form_start(form) }}
    <div class="row">
        <div class="col-sm-12 col-md-6 pb-2">
            {{ form_label(form.areaID) }}
            {{ form_widget(form.areaID) }}
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12 col-md-6 pb-2">
            {{ form_label(form.cprogress) }}
            {{ form_widget(form.cprogress) }}
        </div>
        <div class="col-sm-12 col-md-6 pb-2">
            {{ form_label(form.pprogress) }}
            {{ form_widget(form.pprogress) }}
        </div>
    </div>
    <br>
    <div class="row">
        <div class="col-12">
            {{ form_widget(form.submit) }}
            <a class="btn btn-warning" href="{{ path('ProjectAdminProjects') }}">بازگشت</a>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}