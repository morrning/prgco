{% extends 'hoteling/OPTbase.html.twig' %}

{% block title %}مراکز اسکان{% endblock %}
{% block appTop %}
<a class="btn btn-success border" href="{{ path('hotelingHotelAddHotel') }}">
    <i class="fa fa-plus"></i>
    افزودن هتل جدید
</a>
{% endblock %}
{% block pageBody %}
    <div class="table-responsive">
        <table class="table table-sm table-bordered table-hover rounded text-center">
            <thead class="bg-blue text-light">
            <tr>
                <th>ردیف</th>
                <th>نام مرکز</th>
                <th>آدرس</th>
                <th>تعداد اتاق / سوئیت</th>
                <th>ظرفیت (نفر)</th>
                <th>امکانات</th>
            </tr>
            </thead>
            <tbody class="">
            {% for hotel in hotels %}
                <tr class="">
                    <td>{{ loop.index }}</td>
                    <td>{{ hotel.hotelName }}</td>
                    <td>{{ hotel.adr }}</td>
                    <td>{{ hotel.hotelingRooms | length }}</td>
                    <td>{{ hotel.dep }}</td>
                    <td>
                        <a class="btn btn-success" href="{{ path('hotelingHotelAddRoom',{'id':hotel.id}) }}">افزودن اتاق</a>
                        <a class="btn btn-primary" href="{{ path('hotelingRoomsList',{'id':hotel.id}) }}">لیست اتاق‌ها</a>
                        <a class="btn btn-warning" href="{{ path('hotelingHotelEditHotel',{'id':hotel.id}) }}">ویرایش</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}