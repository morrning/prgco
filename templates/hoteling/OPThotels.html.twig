{% extends 'hoteling/OPTbase.html.twig' %}

{% block title %}مراکز اسکان{% endblock %}

{% block pageBody %}
    <div class="table-responsive">
        <table class="table table-sm table-bordered table-hover rounded text-center">
            <thead class="bg-blue text-light">
            <tr>
                <th>ردیف</th>
                <th>نام مرکز</th>
                <th>آدرس</th>
                <th>تعداد اتاق / سوئیت</th>
                <th>ظرفیت (نفر)</th>
                <th>امکانات</th>
            </tr>
            </thead>
            <tbody>
            {% for hotel in hotels %}
                <tr>
                    <td class="w-auto">{{ loop.index }}</td>
                    <td class="w-auto">{{ hotel.hotelName }}</td>
                    <td class="w-auto">{{ hotel.adr }}</td>
                    <td class="w-auto">{{ hotel.hotelingRooms | length }}</td>
                    <td class="w-auto">{{ hotel.dep }}</td>
                    <td class="w-auto">
                        <a class="btn btn-info btn-small rounded" href="{{ path('hotelingHotelAddRoom',{'id':hotel.id}) }}">افزودن اتاق</a>
                        <a class="btn btn-info btn-small rounded" href="{{ path('hotelingRoomsList',{'id':hotel.id}) }}">لیست اتاق‌ها</a>
                        <a class="btn btn-info btn-small rounded" href="{{ path('hotelingHotelEditHotel',{'id':hotel.id}) }}">ویرایش</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}