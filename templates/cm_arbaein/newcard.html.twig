{% extends 'cm_arbaein/base.html.twig' %}

{% block title %}صدور کارت{% endblock %}

{% block pageBody %}
    {{ form_start(form) }}
    <div class="row">
        <div class="col-sm-12 col-md-4">
            {{ form_label(form.codemeli) }}
            {{ form_widget(form.codemeli) }}
        </div>
        <div class="col-sm-12 col-md-4">
            {{ form_label(form.FGUID) }}
            {{ form_widget(form.FGUID) }}
        </div>
        <div class="col-sm-12 col-md-4">
            {{ form_label(form.CGUID) }}
            {{ form_widget(form.CGUID) }}
        </div>
    </div>
    <div class="row pt-2">
        <div class="col-sm-12 col-md-3">
            {{ form_label(form.fullname) }}
            {{ form_widget(form.fullname) }}
        </div>
        <div class="col-sm-12 col-md-3">
            {{ form_label(form.birthday) }}
            {{ form_widget(form.birthday) }}
        </div>
        <div class="col-sm-12 col-md-3">
            {{ form_label(form.tel) }}
            {{ form_widget(form.tel) }}
        </div>
        <div class="col-sm-12 col-md-3">
            {{ form_label(form.isMan) }}
            {{ form_widget(form.isMan) }}
        </div>
    </div>
    <div class="row">
        <div class="col-12 pt-2">
            {{ form_widget(form.submit) }}
        </div>
    </div>
    {{ form_end(form) }}
    <script>
        $(document).ready(function(){
            $('input.autoClear').val('');
            $('input.activeInput').select();
        });
    </script>
{% endblock %}
