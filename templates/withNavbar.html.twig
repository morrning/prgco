{% extends 'base.html.twig' %}

{% block title %}صفحه اصلی{% endblock %}

{% block body %}
    {% include 'topMenu.html.twig' %}
    <div class="container pt-1">
        <div class="row">
            <div class="col-12">
                {% block alert %}
                    {% if alert is defined %}
                        {% if alert|length != 0 %}
                            {% for alt in alert %}
                                <div class="alert alert-{{ alt.type }}" role="alert">
                                    {{ alt.message }}
                                </div>
                            {% endfor %}
                        {% endif %}
                    {% endif %}
                {% endblock %}
            </div>
        </div>
    </div>
    <div class="container-fluid pt-1 mb-3 pb-3">
        {% block pageBody %}{% endblock %}
    </div>

    <nav class="navbar navbar-expand-sm bg-dark navbar-dark fixed-bottom py-0 mt-3">
        <!-- Navbar text-->
        <span class="navbar-text text-light">
            {{ ConfigMGR.getConfig.footerText }}
        </span>

    </nav>
{% endblock %}