{% extends 'hrm/base.html.twig' %}

{% block title %}منابع انسانی{% endblock %}

{% block pageBody %}
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-4">
                <div class="card">
                    <div class="card-header bg-info text-white">
                        اطلاعات
                    </div>
                    <div class="card-body">
                        <p>
                            تعداد پست های سازمانی:{{ info.allUsers }}نفر
                        </p>
                        <p>
                             پست های سازمانی شرکت:{{ info.employers }}نفر
                        </p>
                        <p>
                            تعداد پیمانکاران:{{ info.contractor }}نفر
                        </p>
                        <p>
                            تعداد پرسنل پیمانکاران:{{ info.contractorPassenger }}نفر
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-sm-12 col-md-8">
                <div class="card">
                    <div class="card-header bg-info text-white">
                        گزارش نیروی انسانی
                    </div>
                    <div class="card-body">
                        <div class="chart-container">
                            <canvas id="myChart"></canvas>
                        </div>
                        <script>

                            var ctx = document.getElementById('myChart');
                            var color = Chart.helpers.color;
                            Chart.defaults.global.defaultFontFamily = 'Shabnam FD';
                            window.chartColors = {
                                red: 'rgb(255, 99, 132)',
                                orange: 'rgb(255, 159, 64)',
                                yellow: 'rgb(255, 205, 86)',
                                green: 'rgb(75, 192, 192)',
                                blue: 'rgb(54, 162, 235)',
                                purple: 'rgb(153, 102, 255)',
                                grey: 'rgb(201, 203, 207)'
                            };
                            var myChart = new Chart(ctx, {
                                type: 'pie',
                                data: {
                                    labels: ['پرسنل پیمانکار','پیمانکاران','پرسنل شرکت'],
                                    datasets: [
                                        {
                                            borderWidth: 1,
                                            data: [
                                                {{ info.contractorPassenger }},
                                                {{ info.contractor }},
                                                {{ info.employers }}
                                            ],
                                            backgroundColor: [
                                                color(window.chartColors.blue).alpha(0.5).rgbString(),
                                                color(window.chartColors.grey).alpha(0.5).rgbString(),
                                                color(window.chartColors.red).alpha(0.5).rgbString(),
                                                color(window.chartColors.yellow).alpha(0.5).rgbString(),
                                            ]

                                        }

                                    ]
                                }
                            });
                        </script>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}