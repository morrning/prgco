{% extends 'hrm/base.html.twig' %}

{% block title %}لیست پرسنل{% endblock %}

{% block appTop %}

{% endblock %}

{% block pageBody %}
    <div class="p-2">
        <div class="table-responsive">
            <table class="table table-sm table-bordered table-hover rounded text-center">
                <thead class="bg-blue text-light">
                <tr>
                    <th>ردیف</th>
                    <th>نام و نام خانوادگی</th>
                    <th>کد ملی</th>
                    <th>شماره پرسنلی</th>
                    <th>شماره تماس</th>
                    <th>امکانات</th>
                </tr>
                </thead>
                <tbody class="">
                {% for user in users %}
                    <tr class="">
                        <td>{{ loop.index }}</td>
                        <td>{{ user.fullname }}</td>
                        <td>{{ user.nationalCode }}</td>
                        <td>{{ user.employeNum }}</td>
                        <td>{{ user.mobileNum }}</td>
                        <td>
                            <a class="btn btn-primary" href="{{ path('HRMEmployeFolder',{'id':user.id}) }}">
                                <i class="fa fa-eye"></i>
                                پرونده پرسنلی
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}