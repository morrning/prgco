{% extends 'base.html.twig' %}

{% block body %}
    <!-- main-content opened -->
    <div class="main-content px-2 mx-2">
        <!-- container opened -->
        <div class="container">
            <!-- row -->
            <div class="row row-sm">
                <div class="col-md-12 col-xl-12">
                    <div class=" main-content-body-invoice">
                        <div class="row">
                            <div class="col-12">
                                {% block alerts %}
                                    {% if alerts is defined %}
                                        {% if alerts|length != 0 %}
                                            {% for alt in alerts %}
                                                <div class="alert alert-{{ alt.type }}" role="alert">
                                                    {{ alt.message }}
                                                </div>
                                            {% endfor %}
                                        {% endif %}
                                    {% endif %}
                                {% endblock %}
                            </div>
                        </div>
                        <div class="container">
                            <div class="row">
                                <div class="col mx-2">
                                    {% block appBody %}{% endblock %}
                                </div>
                            </div>
                        </div>

                    </div>
                </div><!-- COL-END -->
            </div>
            <!-- row closed -->
        </div>
        <!-- Container closed -->
    </div>
    <!-- main-content closed -->
{% endblock %}
