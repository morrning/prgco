{% extends 'ceremonial/REQbase.html.twig' %}
{% block title %}درخواست بلیط هواپیما{% endblock %}
{% block pageBody %}
    <div class="container py-3">
        <div class="row border rounded p-2 m-1">
            <div class="col-sm-12 col-md-12 pb-2">
                <h5>اطلاعات مسافر:</h5>
                <hr>
            </div>
            <div class="col-sm-12 col-md-3">
                <p>
                    نسبت مسافر:
                    <span class="text-danger">{{ passenger.ptype.typeName }}</span>
                </p>
            </div>
            <div class="col-sm-12 col-md-3">
                <p>
                    نام:
                    <span class="text-danger">{{ passenger.pname }}</span>
                </p>
            </div>
            <div class="col-sm-12 col-md-3">
                <p>
                    نام خانوادگی:
                    <span class="text-danger">{{ passenger.pfamily }}</span>
                </p>
            </div>
            <div class="col-sm-12 col-md-3">
                <p>
                    کد ملی:
                    <span class="text-danger">{{ passenger.pcodemeli }}</span>
                </p>
            </div>
        </div>
        <div class="row border rounded p-2 m-1">
            <div class="col-sm-12 col-md-12 pb-2">
                <div class="col-sm-12 col-md-12 pb-2">
                    <h5>مبدا و مقصد:</h5>
                    <p class="text-muted pb-0">
                        تاریخ مسافرت ممکن است با زمان اخذ بلیط برای شما متفاوت باشد.بنا بر ساعت و تاریخ شرکت های هواپیمایی قابل تغییر است.
                    </p>
                    <hr>
                    {{ form_start(form) }}
                    <div class="row">
                        <div class="col-sm-12 col-md-4">
                            {{ form_label(form.dateSuggest) }}
                            {{ form_widget(form.dateSuggest) }}
                        </div>
                        <div class="col-sm-12 col-md-4">
                            {{ form_label(form.source) }}
                            {{ form_widget(form.source) }}
                        </div>
                        <div class="col-sm-12 col-md-4">
                            {{ form_label(form.destination) }}
                            {{ form_widget(form.destination) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row border rounded p-2 m-1">
            <div class="col-sm-12 col-md-12 pb-2">
                <div class="col-sm-12 col-md-12 pb-2">
                    <h5>اطلاعات اضافی:</h5>
                    <hr>
                    {{ form_start(form) }}
                    <div class="row">
                        <div class="col-sm-12 col-md-12">
                            {{ form_label(form.des) }}
                            {{ form_widget(form.des) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-12">
                {{ form_widget(form.submit) }}
                <a class="btn btn-warning" href="{{ path('ceremonialREQpasengerView',{'id':passenger.id}) }}">
                    <i class="fa fa-undo"></i>
                    بازگشت
                </a>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}