{% extends 'ceremonial/REQbase.html.twig' %}

{% block title %}لیست بلیط‌های درخواستی{% endblock %}
{% block appTop %}
<a class="btn btn-success border" href="{{ path('ceremonialREQpasengers') }}">
        <i class="fa fa-list-alt"></i>
        لیست مسافرها
    </a>{% endblock %}
{% block pageBody %}
    <div class="alert alert-info">
        <i class="fa fa-info-circle"></i>
        برای ثبت درخواست بلیط جدید ابتدا به بخش
        <a class="btn btn-link" href="{{ path('ceremonialREQpasengers') }}"> فهرست مسافرها </a>
        مراجعه نمایید
        سپس از بخش مشاهده اطلاعات مسافر نسبت به ثبت درخواست اقدام نمایید.
    </div>
    <div class="table-responsive">
        <table class="table table-sm table-bordered table-hover rounded text-center">
            <thead class="bg-blue text-light">
            <tr>
                <th>ردیف</th>
                <th>نام و نام‌خانوادگی</th>
                <th>شماره ملی</th>
                <th>وضعیت بلیط</th>
                <th>تاریخ درخواست</th>
                <th>امکانات</th>
            </tr>
            </thead>
            <tbody class="">
            {% for ticket in tickets %}
                <tr class="{% if ticket.ticketState.stateCode == 2 %}bg-success text-light{% elseif ticket.ticketState.stateCode == 1 %}bg-danger text-light{% elseif ticket.ticketState.stateCode == 0 %}bg-info text-light{% endif %}">
                    <td>{{ loop.index }}</td>
                    <td>{{ ticket.passengerID.pname }} {{ ticket.passengerID.pfamily }}</td>
                    <td>{{ ticket.passengerID.pcodemeli }}</td>
                    <td>{{ ticket.ticketState.stateName }}</td>
                    <td>{{ Jdate.jdate('Y/n/d',ticket.dateSubmit) }}</td>
                    <td>
                        <a class="btn btn-primary" href="{{ path('ceremonialREQTicketView',{'id':ticket.id}) }}">مشاهده</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}