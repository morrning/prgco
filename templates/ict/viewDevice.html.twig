{% extends 'ict/baseDoing.html.twig' %}

{% block title %}مشاهده دستگاه{% endblock %}
{% block pageBody %}
    <div class="row pb-2">
        <div class="col-xs-12 col-sm-12 col-md-6">
            <div class="row">
                <div class="col-12">
                    <p> نوع دستگاه:{{ machine.deviceType }}</p>
                    <p> کد اموال:{{ machine.prodectCode }}</p>
                    <p> تحویل گیرنده:{{ machine.ownerID }}</p>
                    <p> نام نرم افزاری رایانه:{{ machine.PCName }}</p>
                </div>
            </div>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-6">
            <div class="row">
                <div class="col-12">
                    <h3>اطلاعات سخت افزاری</h3>
                    <p> برند کیس / لپتاپ:{{ machine.PCBrand }}</p>
                    <p> برد اصلی:{{ machine.PCMainboard }}</p>
                    <p> پردازنده:{{ machine.PCCpu }}</p>
                    <p> حافظه موقت:{{ machine.PCRam }}</p>
                    <p> ظرفیت حافظه:{{ machine.PCHard }}</p>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <a class="btn btn-primary" href="{{ path('ictDoingListDevices') }}">بازگشت به لیست دستگاه‌ها</a>
        </div>
    </div>
{% endblock %}