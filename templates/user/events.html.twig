{% extends 'withNavbar.html.twig' %}

{% block title %}تاریخچه رویدادهای کاربر{% endblock %}

{% block pageBody %}
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-12 mx-auto">
                <div class="card">
                    <div class="card-header">
                        تاریخچه رویدادهای کاربر
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-sm table-bordered table-hover rounded text-center">
                                <thead class="bg-blue text-light">
                                <tr>
                                    <th>ردیف</th>
                                    <th>تاریخ</th>
                                    <th>نام کاربری</th>
                                    <th>نام کاربر</th>
                                    <th>عملیات</th>
                                    <th>IP</th>
                                    <th>توضیحات</th>
                                </tr>
                                </thead>
                                <tbody class="">
                                {% for event in events %}
                                    <tr>
                                        <td>{{ loop.index }}</td>
                                        <td>{{ Jdate.jdate('Y/n/d H:i:s',event.dateSubmit) }}</td>
                                        <td>{{ event.username }}</td>
                                        <td>{{ event.fullname }}</td>
                                        <td>{{ event.operation }}</td>
                                        <td>{{ event.ipSource }}</td>
                                        <td>{{ event.des }}</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}