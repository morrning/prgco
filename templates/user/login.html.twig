{% extends 'withNavbar.html.twig' %}

{% block title %}ورود به پورتال{% endblock %}

{% block pageBody %}
    <div class="row justify-content-center">
        <div class="col-xs-12 col-sm-12 col-md-4">
            <div class="card">
                <img class="card-img-top" src="{{ asset('assets/images/public/loginbackgrount.webp') }}" alt="Card image cap">
                <div class="card-header text-center bg-success text-light">
                    ورود به پورتال
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-12 col-md-12 justify-content-center">
                            {{ form_start(form) }}
                            {{ form_widget(form.username) }}
                            <br>
                            {{ form_widget(form.password) }}
                            <hr>
                            {{ form_widget(form.submit) }}
                            <a class="btn btn-warning" href="{{ path('home') }}">
                                بازگشت
                            </a>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
