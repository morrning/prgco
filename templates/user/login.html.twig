<!DOCTYPE html>
<html class="no-js" lang=""><head>
    <meta charset="UTF-8">
    <meta name='viewport' content='width=device-width, initial-scale=1.0, user-scalable=0'>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="Description" content="PRGCO Main Portal">
    <meta name="Author" content="Babak Alizadeh Alizadeh.babak@gmail.com">
    <title> ورود به پورتال</title>
    <!-- Favicon -->
    <link rel="icon" href="{{ asset('favicon.ico') }}">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="{{ asset('login/bootstrap-rtl.css')}}">
    <!-- Icons css -->
    <link href="{{ asset('newface/assets/css/icons.css') }}" rel="stylesheet">
    <!-- Google Web Fonts -->
    <link href="{{ asset('login/css.css')}}" rel="stylesheet">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="{{ asset('login/style.css')}}">
</head>

<body>
<section class="fxt-template-animation fxt-template-layout9 loaded" data-bg-image="{{ asset('login/bg9-l.jpg') }}" style="background-image: url('/login/bg9-l.jpg');">
    <div class="container">
        <div class="row align-items-center justify-content-center">
            <div class="col-lg-3">
                <div class="fxt-header">
                    <a href="{{ path('home') }}" class="fxt-logo"><img src="{{ asset('newface/assets/img/brand/logo.png') }}" alt="Logo"></a>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="fxt-content">
                    <h2> به حساب کاربری خود وارد شوید. </h2>
                    <div class="fxt-form">
                        {{ form_start(form) }}
                            <div class="form-group">
                                <div class="fxt-transformY-50 fxt-transition-delay-1">
                                    {{ form_widget(form.username) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="fxt-transformY-50 fxt-transition-delay-2">
                                    {{ form_widget(form.password,{'attr':{'class':'pwd'}}) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="fxt-transformY-50 fxt-transition-delay-4">
                                    {{ form_row(form.submit,{'attr':{'class' : 'fxt-btn-fill'}}) }}
                                </div>
                            </div>
                        {{ form_end(form) }}
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>
<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header bg-warning">
                <h5 class="modal-title text-white" id="exampleModalCenterTitle">
                    <i class="fa fa-exclamation-triangle"></i>
                    خطای اعتبارسنجی
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                نام کاربری یا کلمه عبور اشتباه است!
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">بازگشت</button>
            </div>
        </div>
    </div>
</div>
<!-- jquery-->
<script src="{{ asset('login/jquery-3.js')}}"></script>
<!-- Popper js -->
<script src="{{ asset('login/popper.js')}}"></script>
<!-- Bootstrap js -->
<script src="{{ asset('login/bootstrap.js')}}"></script>
<!-- Imagesloaded js -->
<script src="{{ asset('login/imagesloaded.js')}}"></script>
<!-- Validator js -->
<script src="{{ asset('login/validator.js')}}"></script>
<!-- Custom Js -->
<script src="{{ asset('login/main.js')}}"></script>

{% if alerts is defined %}
    {% if alerts|length != 0 %}
        <script>
            $( document ).ready(function() {
                $('#exampleModalCenter').modal('show');
            });
        </script>
    {% endif %}
{% endif %}
</body></html>
