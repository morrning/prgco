{% extends 'admin/base.html.twig' %}

{% block title %}ویرایش کاربر:{{ user.Fullname }}{% endblock %}

{% block pageBody %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-8">
                {{ form_start(form) }}
                {{ form_label(form.fullName) }}
                {{ form_widget(form.fullName) }}
                {{ form_label(form.nationalCode) }}
                {{ form_widget(form.nationalCode) }}
                {{ form_label(form.username) }}
                {{ form_widget(form.username) }}
                {{ form_label(form.mobileNum) }}
                {{ form_widget(form.mobileNum) }}
                {{ form_label(form.suspend) }}
                {{ form_widget(form.suspend) }}
                <div class="row pt-2">
                    <div class="col-12">
                        {{ form_widget(form.submit) }}
                        <a class="btn btn-secondary" href="{{ path('adminUsers') }}">بازگشت</a>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
