{% extends 'admin/base.html.twig' %}

{% block title %}تنظیمات مرکزی سامانه{% endblock %}

{% block pageBody %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-8">
                <ul class="nav nav-tabs" id="myTab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">
                            <i class="fa fa-list"></i>
                            تنظیمات عمومی
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">
                            <i class="fa fa-users-cog"></i>
                            کاربران و گروه‌ها
                        </a>
                    </li>
                </ul>
                {{ form_start(form) }}
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                        <div class="input-group mb-3 pt-2">
                            <div class="input-group-prepend">
                                <div class="input-group-text">
                                    >
                                    نام شرکت
                                </div>
                            </div>
                            {{ form_widget(form.siteName) }}
                        </div>

                        <div class="input-group mb-3 pt-2">
                            <div class="input-group-prepend">
                                <div class="input-group-text">
                                    <i class="fa fa-key"></i>
                                    کد فعالسازی
                                </div>
                            </div>
                            {{ form_widget(form.activeationCode) }}
                        </div>
                        <div class="input-group mb-3 pt-2">
                            <div class="input-group-prepend">
                                <div class="input-group-text">
                                    <i class="fa fa-copyright"></i>
                                    پانویس پورتال
                                </div>
                            </div>
                            {{ form_widget(form.footerText) }}
                        </div>
                    </div>
                    <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                        <div class="row mb-2 pt-2">
                            <div class="col-6">
                                {{ form_label(form.USERS_MAX_COOKIE_TIME) }}
                                {{ form_widget(form.USERS_MAX_COOKIE_TIME) }}
                            </div>
                        </div>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
