            <div class="col-xs-12 col-sm-12 col-md-3">
                {{ form_label(form.HRM_SG_PASSWORD) }}
                {{ form_widget(form.HRM_SG_PASSWORD) }}
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
